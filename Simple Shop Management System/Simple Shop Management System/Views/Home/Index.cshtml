@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        /* Hero Section */
        .hero {
            height: 70vh;
            background: url('https://images.unsplash.com/photo-1582515073490-399813e15d51?auto=format&fit=crop&w=1400&q=80') center/cover no-repeat;
            position: relative;
        }

            .hero::after {
                content: '';
                position: absolute;
                inset: 0;
                background-color: rgba(0, 0, 0, 0.5);
            }

            .hero div {
                position: relative;
                z-index: 2;
            }

        /* About Section */
        .about ul li {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        /* Testimonials */
        .testimonials .card {
            border: none;
            transition: transform 0.3s ease;
        }

            .testimonials .card:hover {
                transform: translateY(-10px);
            }

        /* Buttons */
        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        /* Footer */
        footer a {
            text-decoration: none;
        }
    </style>
</head>
<body>

    

    <!-- Hero Section -->
    <section class="hero d-flex align-items-center justify-content-center text-center text-white">
        <div>
            <h1 class="display-4 fw-bold">Welcome to FreshMarket</h1>
            <p class="lead mt-3">Fresh vegetables, fruits, and meat delivered straight to your door.</p>
            <a  class="btn btn-success btn-lg mt-3" asp-action="Index" asp-controller="Product">Shop Now</a>
        </div>
    </section>

    <!-- About Us Section -->
    <section class="about container my-5">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4">
                <img src="https://media.istockphoto.com/id/1524823226/photo/colorful-raw-fruits-and-vegetables-varied-vegan-food-vivid-rainbow-arrangement.jpg?s=612x612&w=0&k=20&c=TtpnDbqIoQ-29DuhrZ9mKxp6sPQvY0BMdcW67dDyZxw=" alt="Fresh Products" class="img-fluid rounded shadow-sm">
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold text-success">About FreshMarket</h2>
                <p class="mt-3">
                    At FreshMarket, we provide the freshest vegetables, fruits, and quality meat for our customers.
                    Our mission is to deliver healthy, fresh, and organic products straight from local farms to your home.
                </p>
                <ul class="list-unstyled mt-3">
                    <li>🍏 Fresh Fruits & Vegetables</li>
                    <li>🥩 Premium Quality Meat</li>
                    <li>🚚 Fast & Reliable Delivery</li>
                    <li>🌱 100% Organic & Natural</li>
                </ul>
                <a href="#" class="btn btn-outline-success mt-3">Learn More</a>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials py-5 bg-light">
        <div class="container text-center">
            <h2 class="fw-bold text-success mb-4">What Our Customers Say</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card shadow-sm p-3">
                        <p>"FreshMarket delivers the best vegetables and fruits. Always fresh and tasty!"</p>
                        <h6 class="fw-bold mt-2">- Sarah K.</h6>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm p-3">
                        <p>"I love their meat section, very fresh and high quality. Highly recommend!"</p>
                        <h6 class="fw-bold mt-2">- Ahmed M.</h6>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm p-3">
                        <p>"Fast delivery and amazing service. My go-to place for fresh produce!"</p>
                        <h6 class="fw-bold mt-2">- Lina S.</h6>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 text-center">
        <p>&copy; 2025 FreshMarket. All Rights Reserved.</p>
        <p>
            Follow us on
            <a href="https://www.instagram.com/zakarya_awartani/" class="text-success">Instagram</a>
        </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>