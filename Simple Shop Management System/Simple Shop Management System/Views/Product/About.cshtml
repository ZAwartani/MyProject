@{
    ViewData["Title"] = "About Me - Zakarya";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            background-color: #f9f9f9;
        }

        .hero {
            height: 40vh;
            background-color: #28a745;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .about-me {
            padding: 60px 0;
        }

            .about-me h2 {
                color: #28a745;
                margin-bottom: 20px;
            }

        .skills li {
            margin-bottom: 10px;
        }

        .btn-custom {
            background-color: #28a745;
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: #218838;
                color: white;
            }

        footer {
            background-color: #222;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

            footer a {
                color: #28a745;
                text-decoration: none;
                margin: 0 5px;
            }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero">
        <div>
            <h1 class="display-4 fw-bold">Hi, I'm Zakarya</h1>
            <p class="lead mt-3">A passionate web developer and tech enthusiast.</p>
        </div>
    </section>

    <!-- About Me Section -->
    <section class="about-me container my-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <h2>About Me</h2>
                <p>Hello! My name is <strong>Zakarya</strong>. I am a web developer with a passion for creating clean, modern, and responsive websites. I enjoy turning ideas into interactive and user-friendly web applications.</p>
                <p>Here’s a little more about what I do and my interests:</p>
                <ul class="list-unstyled skills">
                    <li>💻 Skilled in ASP.NET Core MVC, C#, and JavaScript</li>
                    <li>🎨 Passionate about UI/UX design and front-end development</li>
                    <li>🌱 Always learning new technologies and frameworks</li>
                    <li>⚡ Enjoys problem-solving and optimizing code</li>
                </ul>
                <a href="#" class="btn btn-custom mt-3">Download My Resume</a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Zakarya. All Rights Reserved.</p>
        <p>
            Follow me on
            <a href="#">LinkedIn</a> |
            <a href="#">GitHub</a> |
            <a href="#">Instagram</a>
        </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
