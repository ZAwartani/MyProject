@model Simple_Shop_Management_System.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0 fw-bold">🗑️ Delete Product</h3>
            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-light btn-sm">
                ⬅️ Back to List
            </a>
        </div>

        <div class="card-body">
            <form asp-action="DeleteItem" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control shadow-sm" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control shadow-sm" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="Descriptions" class="form-label fw-semibold"></label>
                    <textarea asp-for="Descriptions" class="form-control shadow-sm" rows="3" disabled></textarea>
                </div>

                <div class="mb-4">
                    <label asp-for="CategoryId" class="form-label fw-semibold">Category</label>
                    <select asp-for="CategoryId" class="form-select shadow-sm" asp-items="@ViewBag.Categorylist" disabled>
                        <option value="">-- Select Category --</option>
                    </select>
                </div>

                <div class="d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-danger px-4">
                        🗑️ Delete
                    </button>
                    <a asp-action="Index" asp-controller="Product" class="btn btn-outline-secondary px-4">
                        ⬅️ Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
