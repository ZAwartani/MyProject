@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products List";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0 fw-bold">🛒 Products List</h3>
            <a class="btn btn-success btn-sm" asp-controller="Product" asp-action="NewItem">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        </div>

        <div class="card-body">
            @* Optional: Notification Partial *@
            @* <partial name="_Notification" /> *@

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center shadow-sm mt-3">
                    <i class="bi bi-box-seam"></i> No products found. Add a new one above.
                </div>
            }
            else
            {
                <table class="table table-hover table-bordered align-middle shadow-sm mt-3">
                    <thead class="table-dark text-center">
                        <tr>
                            <th style="width:5%">ID</th>
                            <th style="width:20%">Name</th>
                            <th style="width:10%">Price ($)</th>
                            <th style="width:30%">Description</th>
                            <th style="width:15%">Category</th>
                            <th style="width:20%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Id</td>
                                <td>@item.Name</td>
                                <td class="text-success fw-semibold">$@item.Price</td>
                                <td>@item.Descriptions</td>
                                <td>@(item.Category?.Name ?? "")</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-warning me-2" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="DeleteItem" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
